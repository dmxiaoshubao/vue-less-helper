{
  "name": "vue-less-helper",
  "publisher": "dmxiaoshubao",
  "displayName": "Vue Less Helper",
  "description": "%extension.description%",
  "version": "0.1.1",
  "icon": "docs/images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmxiaoshubao/vue-less-helper.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:less"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "%configuration.title%",
      "properties": {
        "vueLessHelper.lessFiles": {
          "scope": "resource",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%configuration.lessFiles.description%"
        },
        "vueLessHelper.notice": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "%configuration.notice.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test:unit": "npm run compile && mocha out/test/setup.js out/test/unit/*.test.js",
    "test:perf": "npm run compile && mocha out/test/setup.js out/test/unit/PerformanceBaseline.test.js",
    "test:perf:gc": "npm run compile && node --expose-gc ./node_modules/mocha/bin/mocha out/test/setup.js out/test/unit/PerformanceBaseline.test.js",
    "test:host": "npm run compile && node ./out/test/runHostTest.js",
    "test:host:demos": "npm run compile && node ./out/test/runHostDemoMatrix.js",
    "test:host:vue": "npm run compile && HOST_TEST_EXT_MODE=with-vue node ./out/test/runHostTest.js",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.28.0",
    "@types/mocha": "^10.0.1",
    "@types/mock-require": "^3.0.0",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "mocha": "^10.2.0",
    "mock-require": "^3.0.3",
    "proxyquire": "^2.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "glob": "^10.5.0",
    "json5": "^2.2.3"
  }
}